{
  "description": "Basic Movement Rules",
  "tests": [
    {
      "description": "should allow normal one-square vertical move",
      "board": {
        "0_0": { "player": "PLAYERS.RED", "animal": "PIECES.LION" }
      },
      "startPos": "0_0",
      "endPos": "0_1",
      "currentPlayer": "PLAYERS.RED",
      "expectedValid": true
    },
    {
      "description": "should allow normal one-square horizontal move",
      "board": {
        "0_0": { "player": "PLAYERS.RED", "animal": "PIECES.LION" }
      },
      "startPos": "0_0",
      "endPos": "1_0",
      "currentPlayer": "PLAYERS.RED",
      "expectedValid": true
    },
    {
      "description": "should reject diagonal moves",
      "board": {
        "0_0": { "player": "PLAYERS.RED", "animal": "PIECES.LION" }
      },
      "startPos": "0_0",
      "endPos": "1_1",
      "currentPlayer": "PLAYERS.RED",
      "expectedValid": false
    },
    {
      "description": "should reject moves to negative x",
      "board": {
        "0_0": { "player": "PLAYERS.RED", "animal": "PIECES.LION" }
      },
      "startPos": "0_0",
      "endPos": "-1_0",
      "currentPlayer": "PLAYERS.RED",
      "expectedValid": false
    },
    {
      "description": "should reject moves beyond board width",
      "board": {
        "6_0": { "player": "PLAYERS.RED", "animal": "PIECES.LION" }
      },
      "startPos": "6_0",
      "endPos": "7_0",
      "currentPlayer": "PLAYERS.RED",
      "expectedValid": false
    },
    {
      "description": "should reject move of piece when not player's turn",
      "board": {
        "0_0": { "player": "PLAYERS.RED", "animal": "PIECES.LION" }
      },
      "startPos": "0_0",
      "endPos": "0_1",
      "currentPlayer": "PLAYERS.YELLOW",
      "expectedValid": false
    }
  ]
}